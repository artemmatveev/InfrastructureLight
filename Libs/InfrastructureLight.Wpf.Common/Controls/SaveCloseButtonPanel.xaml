<UserControl x:Class="InfrastructureLight.Wpf.Common.Controls.SaveCloseButtonPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d">

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
        <Button Content="Сохранить" FontSize="14" Background="LightGreen" FontWeight="Normal" Margin="5,15,2.5,5"
                x:Name="xSaveButton"
                Command="{Binding SaveCommand}"/>
        <Button Content="Отменить" FontSize="14" Background="LightCoral" FontWeight="Normal" Margin="2.5,15,5,5"
                x:Name="xCloseButton"
                Command="{Binding CloseCommand}"/>
    </StackPanel>

</UserControl>
